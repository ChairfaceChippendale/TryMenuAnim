<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.ujujzk.trymenuanim.MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/menu_cont"
            android:src="@drawable/mock_map_33"
            android:scaleType="center"/>


        <FrameLayout
            android:id="@+id/menu_cont"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/menu_1">

            <TextView
                android:id="@+id/start_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_menu_white_24dp"
                android:text="Menu"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#03c2ff"
                android:textSize="24dp"/>

        </FrameLayout>


    </RelativeLayout>

</layout>
